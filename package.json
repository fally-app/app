{
    "name": "sabbath-soft",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "lint": "next lint",
        "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
        "dev": "next dev",
        "build": "next build",
        "start": "next start"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "./**/*.{js,jsx,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "dependencies": {
        "@material-ui/core": "4.11.4",
        "@material-ui/icons": "4.11.2",
        "@material-ui/lab": "4.0.0-alpha.60",
        "@types/jsonwebtoken": "8.5.4",
        "@types/mongoose": "5.11.96",
        "@typescript-eslint/eslint-plugin": "4.28.0",
        "@typescript-eslint/parser": "4.28.0",
        "axios": "0.21.1",
        "bcrypt": "5.0.1",
        "clsx": "1.1.1",
        "eslint-plugin-simple-import-sort": "7.0.0",
        "husky": "7.0.1",
        "isomorphic-unfetch": "3.1.0",
        "jsonwebtoken": "8.5.1",
        "lint-staged": "11.0.0",
        "mongodb": "4.1.0",
        "mongoose": "5.13.7",
        "next": "11.1.0",
        "next-auth": "3.28.0",
        "next-connect": "0.10.2",
        "next-pwa": "5.3.1",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "slugify": "1.5.3",
        "swr": "1.0.1"
    },
    "devDependencies": {
        "@types/mongodb": "4.0.6",
        "@types/node": "16.7.1",
        "@types/react": "17.0.22",
        "autoprefixer": "10.2.6",
        "eslint": "7.32.0",
        "eslint-config-next": "11.0.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-jsx-a11y": "6.4.1",
        "eslint-plugin-prettier": "4.0.0",
        "eslint-plugin-react": "7.24.0",
        "eslint-plugin-react-hooks": "4.2.0",
        "prettier": "2.3.1",
        "typescript": "4.4.3"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 80,
        "singleQuote": true,
        "semi": false,
        "jsxBracketSameLine": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "endOfLine": "crlf"
    },
    "renovate": {
        "packageRules": [
            {
                "matchUpdateTypes": [
                    "minor",
                    "patch",
                    "pin",
                    "digest"
                ],
                "automerge": true
            }
        ]
    }
}
